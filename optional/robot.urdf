<?xml version="1.0"?>
<robot name="robot">

    <link name="base_link">

      <inertial>
        <origin xyz="0 0 0.1"/>
        <mass value="10.0"/>
        </inertia ixx="1.0" ixy="0.0" ixz="0.0"
                  iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0.1"/>
        <geometry>
          <box  size="0.4 0.4 0.2"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0.1"/>
        <geometry>
          <box  size="0.4 0.4 0.2"/>
        </geometry>
      </collision>

    </link>

    <material name="blue">
      <color rgba="0 0 0.8 1"/>
    </material>

    <link name="vertical_link">

      <inertial>
        <origin xyz="0 0 0.5"/>
        <mass value="1.0"/>
        </inertia ixx="1.0" ixy="0.0" ixz="0.0"
                  iyy="0.0" iyz="0.0" izz="1.0"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0.5"/>
        <geometry>
          <box  size="0.1 0.1 1.1"/>
        </geometry>
        <material name="blue"/>
      </visual>

      <collision>
        <origin xyz="0 0 0.5"/>
        <geometry>
          <box  size="0.1 0.1 1.1"/>
        </geometry>
      </collision>

    </link>

    <link name="horizontal_link">

      <inertial>
        <origin xyz="0.15 0 1.05"/>
        <mass value="1.0"/>
        </inertia ixx="1.0" ixy="0.0" ixz="0.0"
                  iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>

      <visual>
        <origin xyz="0.15 0 1.05"/>
        <geometry>
          <box  size="0.3 0.1 0.1"/>
        </geometry>
        <material name="blue"/>
      </visual>

      <collision>
        <origin xyz="0.15 0 1.05"/>
        <geometry>
          <box  size="0.3 0.1 0.1"/>
        </geometry>
      </collision>

    </link>


    <joint name="base_to_body" type="revolute"> 
      <parent link="base_link"/> 
      <child link="vertical_link"/> 
      <origin xyz="0 0 0.2"/> 
      <axis xyz="0 1 0"/>
      <limit lower="-3.14" upper="3.14" effort="10" velocity="2"/>
    </joint>

    <joint name="vert_to_horz" type="revolute"> 
      <parent link="vertical_link"/> 
      <child link="horizontal_link"/> 
      <origin xyz="0 0 0"/>
      <axis xyz="0 0 1"/> <!-- SOLO eje Z --> 
      <limit lower="-3.14" upper="3.14" effort="10" velocity="2"/>
    </joint>

</robot>